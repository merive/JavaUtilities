<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" onMouseClicked="#start" prefHeight="150.0"
          prefWidth="525.0" styleClass="background" stylesheets="@RandomNameStyle.css"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="RandomName.RandomNameController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane fx:id="startPane" prefHeight="151.0" prefWidth="526.0">
        <Label layoutX="199.0" layoutY="14.0" text="RandomName">
            <font>
                <Font name="Verdana" size="18.0"/>
            </font>
        </Label>
        <Label layoutX="217.0" layoutY="124.0" text="Click to start">
            <font>
                <Font name="Verdana" size="14.0"/>
            </font>
        </Label>
        <ImageView fitHeight="82.0" fitWidth="90.0" layoutX="222.0" layoutY="37.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@random.png"/>
        </ImageView>
    </Pane>
    <Pane fx:id="pane" prefHeight="150.0" prefWidth="525.0" styleClass="background" stylesheets="@RandomNameStyle.css"
          visible="false">
        <Button layoutX="180.0" layoutY="100.0" mnemonicParsing="false" onAction="#Run" prefHeight="28.0"
                prefWidth="161.0" styleClass="textfield" stylesheets="@RandomNameStyle.css" text="OK">
            <font>
                <Font name="Droid Sans Bold" size="12.0"/>
            </font>
        </Button>
        <Label layoutX="113.0" layoutY="25.0" text="Enter the names (Separated by space) and press ENTER."/>
        <TextField fx:id="text" layoutX="16.0" layoutY="54.0" prefHeight="25.0" prefWidth="487.0" styleClass="textfield"
                   stylesheets="@RandomNameStyle.css">
            <font>
                <Font name="Verdana" size="12.0"/>
            </font>
        </TextField>
    </Pane>
</GridPane>
