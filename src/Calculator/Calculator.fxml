<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" onMouseClicked="#start" prefHeight="242.0"
          prefWidth="216.0" styleClass="background" stylesheets="@CalculatorStyle.css"
          vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="Calculator.CalculatorController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane fx:id="startPane" prefHeight="200.0" prefWidth="200.0">
        <Label layoutX="63.0" layoutY="28.0" text="Calculator">
            <font>
                <Font name="Verdana" size="18.0"/>
            </font>
        </Label>
        <Label layoutX="63.0" layoutY="197.0" text="Click to start">
            <font>
                <Font name="Verdana" size="14.0"/>
            </font>
        </Label>
        <ImageView fitHeight="137.0" fitWidth="128.0" layoutX="44.0" layoutY="57.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@calculator.png"/>
        </ImageView>
    </Pane>
    <Pane fx:id="pane" prefHeight="246.0" prefWidth="217.0" styleClass="background" stylesheets="@CalculatorStyle.css"
          visible="false">
        <Button id="num8" layoutX="59.0" layoutY="54.0" mnemonicParsing="false" onAction="#press8" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="8"/>
        <Button id="num7" layoutX="7.0" layoutY="54.0" mnemonicParsing="false" onAction="#press7" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="7"/>
        <Button id="num9" layoutX="111.0" layoutY="54.0" mnemonicParsing="false" onAction="#press9" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="9"/>
        <Button id="butSum" layoutX="163.0" layoutY="54.0" mnemonicParsing="false" onAction="#pressPlus"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="+"/>
        <Button id="num4" layoutX="7.0" layoutY="103.0" mnemonicParsing="false" onAction="#press4" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="4"/>
        <Button id="num5" layoutX="59.0" layoutY="103.0" mnemonicParsing="false" onAction="#press5" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="5"/>
        <Button id="num6" layoutX="111.0" layoutY="103.0" mnemonicParsing="false" onAction="#press6" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="6"/>
        <Button id="butMinus" layoutX="163.0" layoutY="103.0" mnemonicParsing="false" onAction="#pressMinus"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="-"/>
        <Button id="num1" layoutX="7.0" layoutY="152.0" mnemonicParsing="false" onAction="#press1" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="1"/>
        <Button id="num2" layoutX="59.0" layoutY="152.0" mnemonicParsing="false" onAction="#press2" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="2"/>
        <Button id="num3" layoutX="111.0" layoutY="152.0" mnemonicParsing="false" onAction="#press3" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="3"/>
        <Button id="butMulti" layoutX="163.0" layoutY="152.0" mnemonicParsing="false" onAction="#pressMulti"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="*"/>
        <Button id="butClear" layoutX="7.0" layoutY="197.0" mnemonicParsing="false" onAction="#pressClear"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="C"/>
        <Button id="num0" layoutX="59.0" layoutY="197.0" mnemonicParsing="false" onAction="#press0" prefHeight="39.0"
                prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="0"/>
        <Button id="butEqually" layoutX="111.0" layoutY="197.0" mnemonicParsing="false" onAction="#pressEqually"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="="/>
        <Button id="butDivision" layoutX="163.0" layoutY="197.0" mnemonicParsing="false" onAction="#pressDivision"
                prefHeight="39.0" prefWidth="45.0" styleClass="textfield" stylesheets="@CalculatorStyle.css" text="/"/>
        <TextField id="ResBar" fx:id="ResBar" layoutX="5.0" layoutY="7.0" prefHeight="39.0" prefWidth="206.0"
                   styleClass="textfield" stylesheets="@CalculatorStyle.css">
            <font>
                <Font name="Verdana" size="16.0"/>
            </font>
        </TextField>
    </Pane>
</GridPane>
