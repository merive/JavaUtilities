<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="341.0" prefWidth="574.0" styleClass="background"
          stylesheets="@RRCStyle.css" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="RRC.RRCController">
    <Pane fx:id="startPane" onMouseClicked="#start" prefHeight="200.0" prefWidth="200.0">
        <Label layoutX="238.0" layoutY="274.0" text="Click to start">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label layoutX="261.0" layoutY="24.0" text="RRC">
            <font>
                <Font name="Verdana" size="24.0"/>
            </font>
        </Label>
        <ImageView fitHeight="150.0" fitWidth="200.0" layoutX="211.0" layoutY="96.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@key.png"/>
        </ImageView>
    </Pane>
    <Pane fx:id="pane" prefHeight="341.0" prefWidth="574.0" styleClass="background" stylesheets="@RRCStyle.css"
          visible="false">
        <Label layoutX="15.0" layoutY="14.0" prefHeight="23.0" prefWidth="61.0" text="Message:"/>
        <TextArea fx:id="mes" layoutX="14.0" layoutY="40.0" prefHeight="121.0" prefWidth="551.0" styleClass="text-area"
                  stylesheets="@RRCStyle.css" wrapText="true"/>
        <Label layoutX="14.0" layoutY="171.0" prefHeight="17.0" prefWidth="29.0" text="Key:"/>
        <Spinner fx:id="key" layoutX="46.0" layoutY="167.0">
            <valueFactory>
                <SpinnerValueFactory.IntegerSpinnerValueFactory max="2147483646" min="0"/>
            </valueFactory>
        </Spinner>
        <Button layoutX="237.0" layoutY="167.0" mnemonicParsing="false" onAction="#decrypt" prefHeight="25.0"
                prefWidth="123.0" styleClass="background-elm" stylesheets="@RRCStyle.css" text="Decrypt"/>
        <Button layoutX="395.0" layoutY="167.0" mnemonicParsing="false" onAction="#encrypt" prefHeight="25.0"
                prefWidth="123.0" styleClass="background-elm" stylesheets="@RRCStyle.css" text="Encrypt"/>
        <Label layoutX="12.0" layoutY="204.0" prefHeight="17.0" prefWidth="43.0" text="Result:"/>
        <TextArea fx:id="res" layoutX="12.0" layoutY="221.0" prefHeight="110.0" prefWidth="551.0" styleClass="text-area"
                  stylesheets="@RRCStyle.css" wrapText="true">
            <font>
                <Font name="Verdana" size="12.0"/>
            </font>
        </TextArea>
    </Pane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
