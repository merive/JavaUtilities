<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" onMouseClicked="#start" prefHeight="170.0" prefWidth="615.0"
          styleClass="background" stylesheets="@WatchStyle.css"
          xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="Watch.WatchController">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <Pane fx:id="startPane" prefHeight="200.0" prefWidth="200.0">
        <Label layoutX="273.0" layoutY="14.0" text="Watch" textFill="WHITE">
            <font>
                <Font name="Verdana" size="22.0"/>
            </font>
        </Label>
        <Label layoutX="263.0" layoutY="138.0" text="Click to start" textFill="WHITE">
            <font>
                <Font name="Verdana" size="14.0"/>
            </font>
        </Label>
    </Pane>
    <Pane fx:id="pane" onMouseClicked="#setColor" onMouseMoved="#start" prefHeight="170.0" prefWidth="615.0"
          styleClass="background" stylesheets="@WatchStyle.css" visible="false">
        <Label fx:id="time" alignment="CENTER" layoutX="16.0" layoutY="60.0" prefHeight="50.0" prefWidth="590.0"
               textFill="#ffffff">
            <font>
                <Font name="Verdana" size="28.0"/>
            </font>
        </Label>
    </Pane>
</GridPane>
