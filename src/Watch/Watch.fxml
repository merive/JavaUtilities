<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane onMouseClicked="#start" prefHeight="170.0" prefWidth="615.0" styleClass="background" stylesheets="@WatchStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Watch.WatchController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <Pane fx:id="startPane" prefHeight="200.0" prefWidth="200.0">
        <Label layoutX="273.0" layoutY="14.0" text="Watch" textFill="WHITE">
            <font>
                <Font name="Verdana" size="22.0" />
            </font>
        </Label>
        <Label layoutX="263.0" layoutY="138.0" text="Click to start" textFill="WHITE">
            <font>
                <Font name="Verdana" size="14.0" />
            </font>
        </Label>
        <ImageView fitHeight="88.0" fitWidth="129.0" layoutX="264.0" layoutY="41.0" pickOnBounds="true"
                   preserveRatio="true">
            <Image url="@clock.png"/>
        </ImageView>
    </Pane>
    <Pane fx:id="pane" onMouseClicked="#setColor" onMouseMoved="#start" prefHeight="170.0" prefWidth="615.0" styleClass="background" stylesheets="@WatchStyle.css" visible="false">
        <Label fx:id="time" alignment="CENTER" layoutX="16.0" layoutY="60.0" prefHeight="50.0" prefWidth="590.0" textFill="#ffffff">
            <font>
                <Font name="Verdana" size="28.0" />
            </font>
        </Label>
    </Pane>
</GridPane>
